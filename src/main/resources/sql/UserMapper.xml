<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coldsmog.luckinmap.mapper.UserMapper">

    <!-- User结果集 -->
    <resultMap id="UserMap" type="com.coldsmog.luckinmap.model.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="mail" property="mail" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="integral" property="integral" jdbcType="INTEGER"/>
        <result column="head_img" property="headImg" jdbcType="VARCHAR"/>
        <result column="role_id" property="roleId" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="creator" property="creator" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="mender" property="mender" jdbcType="VARCHAR"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">t_user</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        id, name, mail, password, sex, phone, integral, head_img, role_id, status, create_time, creator, update_time, mender, deleted
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        name, mail, password, sex, phone, integral, head_img, role_id, status, create_time, creator, update_time, mender, deleted
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null and '' != name">
                AND name = #{name}
            </if>
            <if test="mail != null and '' != mail">
                AND mail = #{mail}
            </if>
            <if test="password != null and '' != password">
                AND password = #{password}
            </if>
            <if test="sex != null">
                AND sex = #{sex}
            </if>
            <if test="phone != null and '' != phone">
                AND phone = #{phone}
            </if>
            <if test="integral != null">
                AND integral = #{integral}
            </if>
            <if test="headImg != null and '' != headImg">
                AND head_img = #{headImg}
            </if>
            <if test="roleId != null">
                AND role_id = #{roleId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="creator != null and '' != creator">
                AND creator = #{creator}
            </if>
            <if test="updateTime != null">
                AND update_time = #{updateTime}
            </if>
            <if test="mender != null and '' != mender">
                AND mender = #{mender}
            </if>
            <if test="deleted != null">
                AND deleted = #{deleted}
            </if>
        </trim>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="name != null and '' != name">
                AND name = #{name}
            </if>
            <if test="mail != null and '' != mail">
                AND mail = #{mail}
            </if>
            <if test="password != null and '' != password">
                AND password = #{password}
            </if>
            <if test="sex != null">
                AND sex = #{sex}
            </if>
            <if test="phone != null and '' != phone">
                AND phone = #{phone}
            </if>
            <if test="integral != null">
                AND integral = #{integral}
            </if>
            <if test="headImg != null and '' != headImg">
                AND head_img = #{headImg}
            </if>
            <if test="roleId != null">
                AND role_id = #{roleId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="creator != null and '' != creator">
                AND creator = #{creator}
            </if>
            <if test="updateTime != null">
                AND update_time = #{updateTime}
            </if>
            <if test="mender != null and '' != mender">
                AND mender = #{mender}
            </if>
            <if test="deleted != null">
                AND deleted = #{deleted}
            </if>
        </trim>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <set>
            <if test="name != null and '' != name">
                name = #{name},
            </if>
            <if test="mail != null and '' != mail">
                mail = #{mail},
            </if>
            <if test="password != null and '' != password">
                password = #{password},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="phone != null and '' != phone">
                phone = #{phone},
            </if>
            <if test="integral != null">
                integral = #{integral},
            </if>
            <if test="headImg != null and '' != headImg">
                head_img = #{headImg},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="creator != null and '' != creator">
                creator = #{creator},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="mender != null and '' != mender">
                mender = #{mender},
            </if>
            <if test="deleted != null">
                deleted = #{deleted}
            </if>
        </set>
    </sql>

    <!-- 批量更新条件带set -->
    <sql id="all_batch_set_condition_with_set">
        <set>
            <if test="item.name != null and '' != item.name">
                name = #{item.name},
            </if>
            <if test="item.mail != null and '' != item.mail">
                mail = #{item.mail},
            </if>
            <if test="item.password != null and '' != item.password">
                password = #{item.password},
            </if>
            <if test="item.sex != null">
                sex = #{item.sex},
            </if>
            <if test="item.phone != null and '' != item.phone">
                phone = #{item.phone},
            </if>
            <if test="item.integral != null">
                integral = #{item.integral},
            </if>
            <if test="item.headImg != null and '' != item.headImg">
                head_img = #{item.headImg},
            </if>
            <if test="item.roleId != null">
                role_id = #{item.roleId},
            </if>
            <if test="item.status != null">
                status = #{item.status},
            </if>
            <if test="item.createTime != null">
                create_time = #{item.createTime},
            </if>
            <if test="item.creator != null and '' != item.creator">
                creator = #{item.creator},
            </if>
            <if test="item.updateTime != null">
                update_time = #{item.updateTime},
            </if>
            <if test="item.mender != null and '' != item.mender">
                mender = #{item.mender},
            </if>
            <if test="item.deleted != null">
                deleted = #{item.deleted}
            </if>
        </set>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" useGeneratedKeys="true" keyProperty="id" keyColumn="id"
            parameterType="com.coldsmog.luckinmap.model.entity.User">
        INSERT INTO
        <include refid="table_name"/>
        (
        <include refid="all_columns_not_with_id"/>
        )
        VALUES (
        #{name}, #{mail}, #{password}, #{sex}, #{phone}, #{integral}, #{headImg}, #{roleId}, #{status}, #{createTime},
        #{creator}, #{updateTime}, #{mender}, #{deleted}
        )
    </insert>

    <!--根据对象属性插入-->
    <insert id="insertBatchByProperty" useGeneratedKeys="true" keyProperty="id" keyColumn="id"
            parameterType="java.util.List">
        INSERT INTO
        <include refid="table_name"/>
        (
        <include refid="all_columns_not_with_id"/>
        )
        VALUES
        <foreach collection="list" item="item" separator="," index="index">
            (
            #{item.name}, #{item.mail}, #{item.password}, #{item.sex}, #{item.phone}, #{item.integral}, #{item.headImg},
            #{item.roleId}, #{item.status}, #{item.createTime}, #{item.creator}, #{item.updateTime}, #{item.mender},
            #{item.deleted}
            )
        </foreach>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterType="com.coldsmog.luckinmap.model.entity.User">
        UPDATE
        <include refid="table_name"/>
        <include refid="all_set_condition_with_set"/>
        WHERE
        id = #{id}
    </update>

    <!--根据主键批量更新-->
    <update id="updateBatchByPrimaryKey" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE
            <include refid="table_name"/>
            <include refid="all_batch_set_condition_with_set"/>
            WHERE
            id = #{item.id}
        </foreach>
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        DELETE FROM
        <include refid="table_name"/>
        WHERE
        id = #{id}
    </delete>

    <!--根据主键列表批量删除-->
    <delete id="deleteBatchByPrimaryKey" parameterType="java.util.List">
        DELETE FROM
        <include refid="table_name"/>
        WHERE
        id
        IN
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterType="com.coldsmog.luckinmap.model.entity.User">
        DELETE FROM
        <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="UserMap">
        SELECT
        <include refid="all_columns"/>
        FROM
        <include refid="table_name"/>
        WHERE
        id = #{id}
    </select>

    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterType="com.coldsmog.luckinmap.model.entity.User" resultMap="UserMap">
        SELECT
        <include refid="all_columns"/>
        FROM
        <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterType="com.coldsmog.luckinmap.model.entity.User" resultType="java.lang.Long">
        SELECT
        COUNT(*)
        FROM
        <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <select id="login" resultType="java.lang.String">
        SELECT password
        FROM
        <include refid="table_name"/>
        <where>
            <if test="username != null and '' != username">
                name = #{username}
            </if>
        </where>
    </select>


</mapper>
